@{
	ViewData["Title"] = "Home Page";
}


@model IEnumerable<HangHoa>
<!-- Begin Wrap -->
<div class="wrap">
	<!-- Begin Header -->
	<!-- End Header -->
	<!-- Begin Main -->
	<div class="main">
		<div class="content">
			<!-- Begin New Product -->
			<!-- End New Product -->
			<!-- Begin Feature Products -->
			<div class="content_bottom">
				<div class="heading">
					<h3>ChuNgocAnh</h3>
				</div>
				<div class="see">
					<p><a href="#">See all Products</a></p>
				</div>
				<div class="clear"></div>
			</div>
			<div class="section group">
				@foreach (HangHoa hh in Model)
				{
					<div class="grid_1_of_4 images_1_of_4">
						<a href="preview.html"><img src="images/@hh.Anh" alt="" /></a>
						<h2>@hh.TenHang</h2>
						<div class="price-details">
							<div class="price-number">
								<p><span class="rupees">$@hh.Gia</span></p>
							</div>
							<div class="add-cart">
								<h4><a href="preview.html">Add to Cart</a></h4>
							</div>
							<div class="clear"></div>
						</div>
					</div>

				}


			</div>
			<!-- End Feature Products -->
		</div>
	</div>
	<!-- End Main -->
</div>
<!-- End Wrap -->
<!-- Begin Footer -->
<!-- End Footer -->
@section Scripts {

	<script>


		$('body').on('click', '#nav_lh', function (e) {
			const mid = $(this).data("id");
			console.log(mid)
			$.ajax({
				url: "/Home/MatHangByLoaiHangID",
				data: { mid },
				success: function (response) {
					$(".section.group").html(response);
				}
			});


		});


	</script>
}
